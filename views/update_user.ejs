
<!-- include header -->
<%- include('include/_header') %>
<!-- /include header -->

  <!-- Main Site -->
  <main id="site-main">
    <div class="container">
        <div class="box-nav d-flex justify-between">
           <div class="filter">
               <a href="/"><i class="fas fa-angle-double-left"></i> All Member</a>
           </div>
        </div>
        <div class="form-title text-center">
            <h2 class="text-dark">Update Account</h2>
            <span class="text-light">Use the below form to Update an account</span>
        </div>

        <!-- add user form -->
         <!-- form handling -->
 <form method="POST" id="update_user">
    <div class="new_user">
        <div class="form-group">
            <label for="name" class="text-light">Name</label>
            <input type="hidden" name="id" value="<%= user._id %>">
            <input type="text" name="name" value="<%= user.name %>" placeholder="Mark Stoenis">
        </div>
        <div class="form-group">
            <label for="Email" class="text-light">Email</label>
            <input type="text" name="email" value="<%= user.email%>" placeholder="example@gmail.com">
        </div>
        <div class="form-group">
            <label for="gender" class="text-light">Jenis Kelamin</label>
            <div class="radio inline">
                <input type="radio" id="radio-2" name="gender" value="Laki-Laki" <%= user.gender == 'Laki-Laki' ? 'checked' : '' %>>
                <label for="radio-2" class="radio-label">Laki-Laki</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-3" name="gender" value="Perempuan"  <%= user.gender == 'Perempuan' ? 'checked' : '' %> >
                <label for="radio-3" class="radio-label">Perempuan</label>
            </div>
        </div>

        <div class="form-group">
            <label for="status" class="text-light">Status</label>
            <div class="radio inline">
                <input type="radio" id="radio-4" name="status" value="Menikah" <%= user.status == 'Menikah' ? 'checked' : '' %> >
                <label for="radio-4" class="radio-label">Menikah</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-5" name="status" value="Belum Menikah" <%= user.status == 'Belum Menikah' ? 'checked' : '' %> >
                <label for="radio-5" class="radio-label">Belum Menikah</label>
            </div>
        </div>
        <div class="form-group">
            <label for="pekerjaan" class="text-light">Pekerjaan</label>
            <input type="text" name="pekerjaan" value="<%= user.bpjs_type %>" placeholder="Pelajar, Buruh, Wiraswasta etc.">
        </div>
        <div class="form-group">
            <label for="tempat_lahir" class="text-light">Tempat Lahir</label>
            <input type="text" name="bpjs_number" value="<%= user.bpjs_number %>" placeholder="123456789">
        </div>
        <div class="form-group">
            <label for="tanggal_lahir" class="text-light">Tempat Lahir</label>
            <input type="date" name="tanggal_lahir" value="<%= user.last_payment %>" placeholder="YYYY-MM-DD">
        </div>

        <div class="form-group">
            <button type="submit" class="btn text-dark update">Simpan</button>
        </div>

    </div>
</form>
       
    </div>
</main>
<!-- /Main Site -->

<!-- include footer -->
<%- include('include/_footer') %>
<!-- /include footer -->
